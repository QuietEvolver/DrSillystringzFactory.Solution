@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>

<h1>Machines for Engineers</h1>

@if( @Model.Count == 0)
{
  <h3>No machines yet added</h3>
}
<ul>
  @foreach(Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId})</li> 
    @* | @machine.Engineer.EngineerName *@
  }
</ul>

<br>
<div id="nav-links">
  <p>@Html.ActionLink("Add new machine", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>