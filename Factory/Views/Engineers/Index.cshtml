@{
  Layout = "_Layout";
}

@using Factory.Models
<h1>Engineers: Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No engineers added to machines yet</h3>
} 
else
{
  <ul>
    @foreach (Engineer engineer in Model)
    {
      <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId }) </li> 
      @* | @engineer.CourseEngineer.CourseName *@
        @* Html.ActionLink($"{engineer.Course.CourseName}", "Details", "Courses", new { id = engineer.Course.CourseId})</li> *@
    }
  </ul>
}

<p>@Html.ActionLink("Add new engineer", "Create")</p>

<p>@Html.ActionLink("Add new course", "Create", "Courses")</p> @*?*@

