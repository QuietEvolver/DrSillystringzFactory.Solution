@{
  Layout = "_Layout";
}

@model Registrar.Models.Student

<h2> Add a Course </h2>

<h4> Add a course to this student: @Html.DisplayFor(model => model.StudentName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StudentId)

  @Html.Label("Select Course")
  @Html.DropDownList("CourseId")

  <input type="submit" value="Save" class="btn btn-success" />
}

<br>
<div id="nav-links">
  <p>@Html.ActionLink("back to Student List", "Index")</p>
</div>