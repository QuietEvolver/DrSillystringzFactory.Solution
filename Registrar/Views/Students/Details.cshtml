@{
  Layout = "_Layout";
}

@using Registrar.Models
@model Registrar.Models.Student

<h2>Student Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.StudentName): @Html.DisplayFor(model => model.StudentName)<h3>
<h3>@Html.DisplayNameFor(model => model.Course): @Html.DisplayFor(model => model.Course.CourseName)<h3>

  @if(Model.JoinEntities.Count == 0)
  { 
    <p>Student has no courses yet.</p>
  }
  else
  {
    <h4> This student has the following courses:</h4>
    <ul>
      @foreach(CourseStudent join in Model.JoinEntities)
      {
        <li>Course: @join.Course.CourseName</li>
        @using (Html.BeginForm("DeleteJoin", "Students"))
        {
          @Html.Hidden("joinId", @join.CourseStudentId)
          <input type="submit" value="Delete"/>
        }
      }
    </ul>
  }

<p>@Html.ActionLink("Add a course", "AddCourse", new { id = Model.StudentId} </p>
<p>@Html.ActionLink("Edit Student or Course", "Edit", new { id = Model.StudentId })</p>
<p>@Html.ActionLink("Delete Student", "Delete", new { id = Model.StudentId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>